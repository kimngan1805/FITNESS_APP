<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"  >

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="104dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp"
        android:src="@drawable/ic_arrow_back"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/community_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Community"
        android:textSize="24sp"
        android:textColor="#000000"  android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search in community"
        android:textSize="16sp"
        android:textColorHint="#808080"  android:textColor="#000000"  android:layout_below="@+id/community_title"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp"
        android:background="@android:drawable/edit_text"  android:padding="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/user_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_bar"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="8dp"
        tools:listitem="@layout/user_item" />  </RelativeLayout>
