<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow"  android:padding="16dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/messages_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Messages"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/empty_messages_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@android:drawable/sym_action_chat"
        android:layout_centerInParent="true"
        android:alpha="0.5" />

    <TextView
        android:id="@+id/empty_messages_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your messages list is empty"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_below="@+id/empty_messages_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/empty_messages_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your dialogues with coaches and other users will be displayed here"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@+id/empty_messages_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:maxWidth="300dp" />

    <Button
        android:id="@+id/add_message_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:text="+"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:background="#007BFF"
        android:elevation="8dp"
        android:stateListAnimator="@android:anim/fade_in"
        android:clickable="true"
        android:focusable="true" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        app:itemIconTint="#000000"
        app:itemTextColor="#000000"
        app:menu="@menu/menu" />

</RelativeLayout>
